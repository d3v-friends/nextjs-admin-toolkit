{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "removeComments": true,
    "declaration": true,
    "inlineSourceMap": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/comp",
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "./src/app",
    "./src/var"
  ],
  "tsc-alias": {
    "verbose": true
  }
}